{
  "name": "@bi/easymatrix",
  "version": "0.1.0",
  "description": "EasyMatrix adapter for Beeper Desktop API with embedded fetch helpers and a CLI runner.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "easymatrix": "./cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "cli.mjs",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bunx tsc -p tsconfig.build.json",
    "typecheck": "bunx tsc -p tsconfig.json --noEmit",
    "test:types": "bunx tsc -p tsconfig.types.json --noEmit"
  },
  "dependencies": {
    "@beeper/desktop-api": "^4.2.3"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "typescript": "^5.9.2"
  }
}
